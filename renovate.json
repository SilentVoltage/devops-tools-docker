{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":separateMajorReleases",
    ":label(renovate)"
  ],
  "dockerfile": {
    "enabled": true
  },

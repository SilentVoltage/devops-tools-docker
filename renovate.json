      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)Dockerfile$/"
      ],
      "matchStrings": [
        "ARG (?<depName>ALPINE_VERSION)=(?:\"?v?(?<currentValue>[0-9.]+)\"?)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "alpine",
      "versioningTemplate": "semver"
    },
